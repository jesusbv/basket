{
  "ecmaFeatures": {
    "arrowFunctions": true,
    "classes": true,
    "destructuring": true,
    "forOf": true,
    "modules": true,
    "spread": true,
    "defaultParams": true,
    "jsx": true,
    "regexYFlag": true,
    "regexUFlag": true
  },
  "rules": {
    "indent": [2, 2],
    "quotes": [2, "single"],
    "semi": [2, "always"],
    "space-before-blocks": [1, "always"],
    "eqeqeq": [2, "smart"],
    "comma-spacing": 1,
    "linebreak-style": [2, "unix"],
    "no-unused-vars": [2, { "vars": "all", "args": "none" }],
    "no-shadow": 0,
    "curly": 0,
    "no-loop-func": [0],
    "object-curly-spacing": [2, "never"],
    "dot-notation": [1, { "allowKeywords": true, "allowPattern": "" }],
    "key-spacing":  [2, { "beforeColon": false, "afterColon": true }],
    "camelcase": [1, { "properties": "always" }],
    "handle-callback-err": 2,
    "no-unneeded-ternary": 1,
    "no-spaced-func": 2,
    "no-multiple-empty-lines": 2,
    "new-cap": [2, { "capIsNewExceptions": ["STRING", "CHAR", "TEXT"] }],
    "new-parens": 2,
    "space-unary-ops": [1, { "words": true, "nonwords": false }],
    "max-len": [2, 100, 2],
    "array-bracket-spacing": [2, "never"],
    "object-curly-spacing": [2, "always"],
    "strict": [2, "global"],
    "no-process-exit": 1,
    "no-cond-assign": 2,
    "comma-dangle": [2, "never"],
    "no-dupe-keys": 2,
    "no-duplicate-case": 2,
    "no-empty": 2,
    "no-irregular-whitespace": 2,
    "no-unreachable": 2,
    "valid-typeof": 2,
    "no-multi-spaces": 2,
    "no-undef": 0,
    "no-underscore-dangle": 0
  },
  "env": {
    "node": true,
    "mocha": true,
    "es6": true
  }
}
